# ===== BACKEND ENVIRONMENT VARIABLES =====

# Database Configuration (PostgreSQL)
DB_NAME=otaku_shop
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/otaku_shop

# JWT Configuration
# Generar con: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_64
JWT_EXPIRATION=86400000

# Server Configuration
PORT=8080
SPRING_PROFILES_ACTIVE=dev

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:4173

# ===== FRONTEND ENVIRONMENT VARIABLES =====

# API Configuration
VITE_API_BASE_URL=http://localhost:8080

# ===== RENDER PRODUCTION VARIABLES =====

# Backend Production (PostgreSQL)
SPRING_DATASOURCE_URL=postgresql://user:password@host:5432/otaku_shop
JWT_SECRET=<generate_with_openssl_rand_base64_64>
CORS_ALLOWED_ORIGINS=https://otaku-shop-frontend.onrender.com

# Frontend Production
VITE_API_BASE_URL=https://otaku-shop-backend.onrender.com
